<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="75dp">

    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/welcome"
        android:textSize="22sp" />

    <Button
        android:id="@+id/openWorkoutSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openWorkoutSelection"
        android:text="@string/select_a_workout" />

    <Button
        android:id="@+id/openWorkoutPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="openWorkoutPlan"
        android:text="@string/workout_plan" />

    <Button
        android:id="@+id/openSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="openSuggestions"
        android:text="@string/suggestion" />

    <Button
        android:id="@+id/openSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="openSettings"
        android:text="@string/settings" />

</LinearLayout>
