<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/upperProgressText"
            android:text="Upper Body Progress"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
        <ProgressBar
            android:id="@+id/upperProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lowerProgressText"
            android:text="Lower Body Progress"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
        <ProgressBar
            android:id="@+id/lowerProgressBar"
            android:max="4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/backProgressText"
            android:text="Back Progress"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
        <ProgressBar
            android:id="@+id/backProgressBar"
            android:max="4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/coreProgressText"
            android:text="Core Progress"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <ProgressBar
            android:id="@+id/coreProgressBar"
            android:max="4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>